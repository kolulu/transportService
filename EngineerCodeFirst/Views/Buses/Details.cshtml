@model EngineerCodeFirst.Models.Bus

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Bus</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BusID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BusID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RegNum)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegNum)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
    <table class="table">
        <tr>
            <th>
                Line
            </th>
        </tr>

        @foreach (var item in Model.Lines)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LineInfo)
                </td>
            </tr>
        }
    </table>
    <table class="table">
        <tr>
            <th>
                Driver
            </th>
        </tr>

        @foreach (var item in Model.Drivers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverInfo)
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BusID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
